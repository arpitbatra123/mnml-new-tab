{
  "name": "mnml new tab",
  "description": "A minimal experience for the new tab page",
  "version": "0.4",
  "manifest_version": 2,
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "browser_action": {
    "default_icon": "assets/icon.png"
  },
  "permissions": ["bookmarks", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { "16": "assets/icon16.png", "48": "assets/icon48.png", "128": "assets/icon.png" }
}
