{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["google"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "comma-dangle": "off",
    "one-var": ["error", "always"],
    "max-len": [120, "error"]
  },
  "ignorePatterns": ["src/polyfill.js"]
}
